@model Car.Core.Domain.Car

<h2 class="mb-4">Car Details</h2>

<div class="card shadow-sm border-0">
    <div class="card-body">

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="text-muted">Make</div>
                <div class="fw-semibold fs-5">@Model.Make</div>
            </div>
            <div class="col-md-6">
                <div class="text-muted">Model</div>
                <div class="fw-semibold fs-5">@Model.Model</div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <div class="text-muted">Year</div>
                <div class="fw-semibold">@Model.Year</div>
            </div>
            <div class="col-md-4">
                <div class="text-muted">Price</div>
                <div class="fw-semibold">@Model.Price €</div>
            </div>
            <div class="col-md-4">
                <div class="text-muted">Condition</div>
                @if (Model.IsUsed)
                {
                    <span class="badge bg-warning text-dark">Used</span>
                }
                else
                {
                    <span class="badge bg-success">New</span>
                }
            </div>
        </div>

        <hr />

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="text-muted">Created At</div>
                <div>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</div>
            </div>
            <div class="col-md-6">
                <div class="text-muted">Modified At</div>
                <div>@Model.ModifiedAt.ToString("dd.MM.yyyy HH:mm")</div>
            </div>
        </div>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                 Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                ← Back to list
            </a>
        </div>

    </div>
</div>
